<!DOCTYPE html>
<html>
<head>
    <title>Collection</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/theme.css" rel="stylesheet">
</head>
<body>
    <%- include('partials/navbar', {page: '/lego/sets'}) %>
    <div class="container mt-5">
        <h1 class="mb-4">Collection</h1>
        <div class="mb-3">
            <!-- Hard-coded filter links can be added here if needed -->
        </div>
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Image</th>
                    <th scope="col">Name</th>
                    <th scope="col">Theme</th>
                    <th scope="col">Year</th>
                    <th scope="col">Parts</th>
                    <th scope="col">Details</th>
                </tr>
            </thead>
            <tbody>
                <% sets.forEach(function(set) { %>
                    <tr>
                        <td>
                            <div class="rounded" style="width: 8rem; height: 8rem; background-image: url('<%= set.img_url %>'); background-size: cover; background-position: center;"></div>
                        </td>
                        <td><%= set.name %></td>
                        <td>
                            <a href="/lego/sets?theme=<%= encodeURIComponent(set.theme) %>" class="btn btn-outline-primary btn-sm"><%= set.theme %></a>
                        </td>
                        <td><%= set.year %></td>
                        <td><%= set.num_parts %></td>
                        <td>
                            <a href="/lego/sets/<%= set.set_num %>" class="btn btn-info btn-sm">details</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 