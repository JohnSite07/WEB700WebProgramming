<!DOCTYPE html>
<html>
<head>
    <title><%= set.name %></title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/theme.css" rel="stylesheet">
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            // TODO: "fetch" the data at: https://dummyjson.com/quotes/random
            fetch('https://dummyjson.com/quotes/random')
                .then(response => response.json())
                .then(data => {
                    // TODO: Update the element with id="quote" to include the "quote" and "author" data from the api using document.getElementById("quote").innerHTML = *
                    document.getElementById("quote").innerHTML = `<p class="lead"><em>"${data.quote}"</em></p><p class="text-muted">- ${data.author}</p>`;
                })
                .catch(error => {
                    document.getElementById("quote").innerHTML = '<p class="text-muted">Unable to load quote</p>';
                });
        });
    </script>
</head>
<body>
    <%- include('partials/navbar', {page: ''}) %>
    <div class="container mt-5">
        <h1 class="mb-4"><%= set.name %></h1>
        <p class="lead">Below, you will find detailed information about the set: <%= set.name %></p>
        <div class="row">
            <div class="col-md-4">
                <div class="rounded mb-3" style="width: 100%; height: 16rem; background-image: url('<%= set.img_url %>'); background-size: cover; background-position: center;"></div>
            </div>
            <div class="col-md-8">
                <ul class="list-group mb-3">
                    <li class="list-group-item"><strong>Name:</strong> <%= set.name %></li>
                    <li class="list-group-item"><strong>Year:</strong> <%= set.year %></li>
                    <li class="list-group-item"><strong>Theme:</strong> <%= set.Theme.name %></li>
                    <li class="list-group-item"><strong>Number of Parts:</strong> <%= set.num_parts %></li>
                </ul>
                <span id="quote"></span>
                <a href="/lego/deleteSet/<%= set.set_num %>" class="btn btn-danger me-2">Delete</a>
                <a href="#" onclick="history.back(); return false;" class="btn btn-secondary">Back</a>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 