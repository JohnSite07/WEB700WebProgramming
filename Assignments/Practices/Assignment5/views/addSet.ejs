<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/ccs/theme.css" rel="stylesheet">
    <title>Add Set</title>
</head>
<body>
    <%- include('partials/navbar', {page: '/lego/addSet'})%>
    <div class="container">
        <div class="row">
            <main class="col-md-12">
                <section class="bg-light text-center py-5">
                    <div class="container">
                        <h1 class="display-5 fw-bold">Add Set</h1>
                        <form action="/lego/addSet" method="POST" class="mt-4">
                            <div class="mb-3">
                                <label for="name" class="form-label">Name</label>
                                <input type="text" class="form-control" id="name" name="name" required>
                            </div>
                            <div class="mb-3">
                                <label for="year" class="form-label">Year</label>
                                <input type="number" class="form-control" id="year" name="year" required>
                            </div>
                            <div class="mb-3">
                                <label for="num_parts" class="form-label">Number of Parts</label>
                                <input type="numer" class="form-control" id="num_parts" name="num_parts" required>
                            </div>
                            <div class="mb-3">
                                <label for="img_url" class="form-label">Image URL</label>
                                <input type="url" class="form-control" id="img_url" name="img_url" required>
                            </div>
                            <div class="mb-3">
                                <label for="theme_id" class="form-label">Theme</label>
                                <select class="form-select" id="theme_id" name="theme_id" required>
                                    <% if (typeof themes !== 'undefined') { %>
                                        <% themes.forEach(function(theme) { %>
                                            <option value="<%=theme.id >"<%= theme.name %></option>
                                        <% })%>
                                    <% } %>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="set_num" class="form-label">Set Number</label>
                                <input type="text" class="form-control" id="set_num" name="set_num" required>
                            </div>
                            <button type="submit" class="btn btn-primary">Add Set</button>
                        </form>
                    </div>
                </section>
            </main>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>