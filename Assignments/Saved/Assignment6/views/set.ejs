<%- include('partials/navbar', {page: ''}) %>
<div class="container mt-5">
    <h1 class="mb-4"><%= set.name %></h1>
    <p class="lead">Below, you will find detailed information about the set: <%= set.name %></p>
    <div class="row">
        <div class="col-md-4">
            <div class="rounded mb-3" style="width: 100%; height: 16rem; background-image: url('<%= set.img_url %>'); background-size: cover; background-position: center;"></div>
        </div>
        <div class="col-md-8">
            <ul class="list-group mb-3">
                <li class="list-group-item"><strong>Name:</strong> <%= set.name %></li>
                <li class="list-group-item"><strong>Year:</strong> <%= set.year %></li>
                <li class="list-group-item"><strong>Theme:</strong> <%= set.theme %></li>
                <li class="list-group-item"><strong>Number of Parts:</strong> <%= set.num_parts %></li>
            </ul>
            <a href="/lego/deleteSet/<%= set.set_num %>" class="btn btn-danger me-2">Delete</a>
            <a href="#" onclick="history.back(); return false;" class="btn btn-secondary">Back</a>
        </div>
    </div>
</div> 